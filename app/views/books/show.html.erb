<%= render 'list',book: @book, user: @user %>

<h1>Book detail</h1>
<table>
  <tr>
    <td><%= link_to user_path(@books) do %>
    <%= image_tag @books.user.get_profile_image(100,100) %><br>
    <%= @books.user.name %>
    <% end %>
    </td>
    <td>
      <%= link_to book_path(@books) do %>
      <%= @books.title %></td>
      <% end %>
    <td><%= @books.body %></td>
    <% if @books.user_id == current_user.id %>
    <td><%= link_to "Edit",edit_book_path(@books) %></td>
    <td><%= link_to "Destroy",book_path(@books),method: :delete %></td>
    <% end %>
  </tr>
</table>