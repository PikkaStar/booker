<div class="container">
  <div class="row">
    <div class="mx-auto">
<%= render 'searched' %>
</div>
</div>
</div>

<h1>検索結果</h1>
<table class="table table-hover table-inverse">
  <% if @range == "User" %>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user_path(user.id) do %>
        <%= image_tag user.get_profile_image(100,100) %>
        <% end %>
        </td>
      <td>
        <%= link_to user_path(user.id) do %>
        <%= user.name %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <% else %>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.id) do %>
        <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
        </td>
      <td><%= book.body %></td>
      <td>
        <%= book.user.name %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
</table>