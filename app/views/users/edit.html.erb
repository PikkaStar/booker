<% if @user.errors.any? %>
<%= @user.errors.count %>errors
<% @user.errors.full_messages.each do |message| %>
<li>
    <%= message %>
</li>
<% end %>
<% end %>

<h1>User info</h1>
<%= form_with model: @user do |f|%>
<%= f.label :name %><br>
<%= f.text_field :name,autofocus: true %><br>
<%= f.label :image %><br>
<%= f.file_field :profile_image,accept: 'image/*' %><br>
<%= f.label :introduction %><br>
<%= f.text_area :introduction %><br>
<%= f.submit "Update User" %>

<% end %>