<% if @user.errors.any? %>
<%= @user.errors.count %>errors
<% @user.errors.full_messages.each do |message| %>
<li>
    <%= message %>
</li>
<% end %>
<% end %>
 <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
<h1>User info</h1>
<%= form_with model: @user do |f|%>
<%= f.label :name %><br>
<%= f.text_field :name,autofocus: true,class: "form-control" %><br>
<%= f.label :image %><br>
<%= f.file_field :profile_image,accept: 'image/*' %><br>
<%= f.label :introduction %><br>
<%= f.text_area :introduction,class: "form-control" %><br>
<%= f.submit "Update User",class: "btn btn-secondary" %>

<% end %>
</div>
</div>
</div>